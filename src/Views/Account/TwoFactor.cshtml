@model IdentityProvider.Models.TwoFactorModel
<div class="row">
    <div class="col-col-md-6 mx-md-auto">
        <div class="form-container">
            <div class="form__header" style="margin-top: 10rem">
                <h1>Verify identity</h1>
                <p class="form__text">We've sent you an Email</p>
            </div>
            <form class="form" asp-action="TwoFactor" method="post">
                <input type="hidden" asp-for="ReturnUrl" value="@Model.ReturnUrl" />
                <input type="hidden"
                       asp-for="RememberLogin"
                       value="@Model.RememberLogin" />

                <!-- Phone number mask -->
                <div class="form__group form__group_small">
                    <input class="form__input"
                           type="text"
                           name="phoneNumber"
                           id="phoneNumber"
                           value="XXXXXX482"
                           disabled />
                </div>

                <!-- verification code/token -->
                <div class="form__group form__group_small">
                    <input class="form__input"
                           type="text"
                           id="verificationCode"
                           placeholder="Enter the 6-digit code"
                           asp-for="Token" />
                </div>
                <!-- custom checkbox -->
                <div class="form__group form__group_inline">
                    <input class="form__checkbox"
                           type="checkbox"
                           name="rememberMe"
                           checked="checked"
                           id="rememberMe"
                           asp-for="RememberLogin"/>
                    <span class="checkbox__custom"></span>
                    <label for="rememberMe"
                           class="form__label mb-0"
                           style="font-size: 12px">
                        Remember this device for 30 days
                    </label>
                </div>

                <button class="form__button">Continue</button>

                <p class="text-center">
                    <span>Didn't receive a code?</span>
                    <a href="#" class="form__link">Resend</a>
                </p>
            </form>
        </div>
    </div>
</div>



